# AI Provider API Keys

# Anthropic Claude API (Get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# Extension ID (Your Chrome/Safari extension ID)
EXTENSION_ID=your_extension_id_here

# Cache Configuration
CACHE_TTL=3600          # Cache TTL in seconds (1 hour)
CACHE_MAX_SIZE=1000     # Maximum cached items

# Rate Limiting (requests per minute per user)
RATE_LIMIT_FREE=20      # Free tier: 20 AI requests/hour
RATE_LIMIT_PRO=200      # Pro tier: 200 AI requests/hour

# AI Model Selection
CLAUDE_MODEL=claude-3-5-sonnet-20241022    # Claude model to use
OPENAI_MODEL=gpt-4-turbo-preview           # OpenAI model to use
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true

# Cost Limits (optional safety limits)
MAX_COST_PER_USER_PER_DAY=1.00  # Max $1/user/day
ALERT_COST_THRESHOLD=0.50        # Alert at $0.50/user/day
