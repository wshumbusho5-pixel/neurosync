# Stripe API Keys (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here

# Stripe Webhook Secret (Get from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Extension ID (Your Chrome/Safari extension ID)
EXTENSION_ID=your_extension_id_here

# Stripe Product & Price IDs (Create in Stripe Dashboard)
# Product: NeuroSync Pro ($4.99/month)
STRIPE_PRICE_ID=price_your_price_id_here

# Success/Cancel URLs
SUCCESS_URL=chrome-extension://YOUR_EXTENSION_ID/popup/success.html
CANCEL_URL=chrome-extension://YOUR_EXTENSION_ID/popup/popup.html
